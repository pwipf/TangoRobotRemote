<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.neptune.remotecontrol.MainActivity"
    tools:showIn="@layout/activity_main"

    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:id="@+id/linIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="IP: "
            android:id="@+id/textIP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="number|numberDecimal"
            android:digits="0123456789."
            android:text="192.168.43.1"
            android:id="@+id/editIP"
            android:selectAllOnFocus="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textIP"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linIP"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Port: "
            android:id="@+id/textPort"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textIP"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:text="6242"
            android:id="@+id/editPort"
            android:selectAllOnFocus="true"
            android:layout_below="@+id/editIP"
            android:layout_toRightOf="@+id/textPort"/>
    </LinearLayout>

    <Button
        android:text="Connect"
        android:onClick="onConnectClick"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linPort"
        android:id="@+id/buttonConnect"
        android:background="@drawable/custbut"/>

    <Button
        android:text="Disconnect"
        android:onClick="onDisconnectClick"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonConnect"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/buttonDisonnect"
        android:background="@drawable/custbut"/>

    <ScrollView
        android:id="@+id/demoScroller"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDisonnect"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:clickable="false">

        <TextView
            android:id="@+id/dumpText"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:clickable="false"/>
    </ScrollView>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/buttonForward"
            android:onClick="onCommandClick"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/custbuttop"
            android:layout_alignLeft="@+id/buttonStop"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/buttonStop"
            android:text="Forward"/>

        <Button
            android:id="@+id/buttonLeft"
            android:onClick="onCommandClick"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/custbutleft"
            android:layout_alignBottom="@+id/buttonStop"
            android:layout_alignTop="@+id/buttonStop"
            android:layout_toLeftOf="@+id/buttonStop"
            android:text="Left"/>

        <Button
            android:id="@+id/buttonStop"
            android:onClick="onCommandClick"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/custbutmiddle"
            android:layout_below="@+id/buttonForward"
            android:layout_centerHorizontal="true"
            android:text="Stop"/>

        <Button
            android:id="@+id/buttonRight"
            android:onClick="onCommandClick"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/custbutright"
            android:layout_alignBottom="@+id/buttonStop"
            android:layout_alignTop="@+id/buttonStop"
            android:layout_toRightOf="@+id/buttonStop"
            android:text="Right"/>

        <Button
            android:id="@+id/buttonReverse"
            android:onClick="onCommandClick"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/custbutbottom"
            android:layout_alignLeft="@+id/buttonStop"
            android:layout_alignRight="@+id/buttonStop"
            android:layout_below="@+id/buttonStop"
            android:text="Reverse"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <Button
            android:onClick="onCommandClick"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Go To Target"
            android:background="@drawable/custbut"
            android:id="@+id/buttonGo"/>

        <Button
            android:onClick="onCommandClick"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:text="Stop Everything"
            android:background="@drawable/custbut"
            android:id="@+id/buttonStopEverything"/>

        <Button
            android:onClick="onCommandClick"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:text="Clear Targets"
            android:background="@drawable/custbut"
            android:id="@+id/buttonClearTargets"/>

        <Button
            android:onClick="onCommandClick"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:text="Add Target"
            android:background="@drawable/custbut"
            android:id="@+id/buttonSetTarget"/>


    </LinearLayout>

</RelativeLayout>
